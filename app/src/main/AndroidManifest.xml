<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"    package="il.ac.shenkar.todolist" >
    <uses-sdk        android:minSdkVersion="10"        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="il.ac.shenkar.todolist.TaskListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="il.ac.shenkar.todolist.CreateTaskActivity"
            android:label="@string/title_activity_create_task" >
        </activity>
        <activity android:name="il.ac.shenkar.todolist.LocationActivity" android:label="@string/title_activity_location"></activity>
         <receiver android:name="il.ac.shenkar.todolist.MyBroadcastReceiver">
            <intent-filter>
                <action android:name="com.shenkar.todolist"/>
            </intent-filter>
        </receiver>
</application>

</manifest>
